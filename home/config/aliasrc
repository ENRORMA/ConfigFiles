#better ls
#alias ls="ls -la --human-readable --color=auto"

#even better ls
#you have to install exa with "sudo apt install exa" or whatever your package manager is
alias ls="exa -laG --time-style long-iso --group-directories-first"

#better grep
alias grep="grep --color=auto"

#ssh to server
alias server="ssh root@$server"
